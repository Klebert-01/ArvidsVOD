<table class="table mt-2">
	<thead>
		<tr>
			<th scope="col">Video Id</th>
			<th scope="col">Genre Id</th>
		</tr>
	</thead>
	<tbody class="table-group-divider">
		@foreach (var filmGenre in Model)
		{
				<tr>
					<td>@filmGenre.FilmId</td>
					<td>@filmGenre.GenreId</td>
					<td>
						<div class="d-flex me-1 justify-content-end">
							<button class="btn btn-outline-danger rounded-0" @onclick="@(() => OnClick.InvokeAsync(new RefClickModel<FilmGenreDTO>(PageType.Delete, filmGenre)))">Delete</button>
						</div>
					</td>
				</tr>
		}
	</tbody>
</table>
